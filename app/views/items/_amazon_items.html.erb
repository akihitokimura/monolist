<div class="container">
  <div class="container-inner inner-default clearfix">
    <% amazon_items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% if item.get('LargeImage/URL').present? %>
              <%= image_tag item.get('LargeImage/URL') %>
            <% else %>
              <%= image_tag("no-image.png") %>
            <% end %>
          </div>
          
        </div>
       
        <div class="detail">
          <p class="title">
           <%= item.get('ItemAttributes/Title') %>
          </p>
        </div>
        
        <div class="action clearfix">
          <% if current_user.want?(item) %>
            <%= render partial: 'unwant', locals: {item: item} %>
          <% else %>
            <%= render partial: 'want', locals: {item: item} %>
          <% end %>
          
          <% if current_user.have?(item) %>
            <%= render partial: 'unhave', locals: {item: item} %>
          <% else %>
            <%= render partial: 'have', locals: {item: item} %>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>